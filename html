<script>
    // Star Generation
    const container = document.getElementById('star-container');
    for (let i = 0; i < 100; i++) {
        let star = document.createElement('div');
        star.className = 'star';
        star.style.width = Math.random() * 3 + 'px';
        star.style.height = star.style.width;
        star.style.left = Math.random() * 100 + 'vw';
        star.style.top = Math.random() * 100 + 'vh';
        container.appendChild(star);
    }

    let player;
    function onYouTubeIframeAPIReady() {
        player = new YT.Player('player', {
            height: '100%', width: '100%',
            videoId: 'jfKfPfyJRdk', // Lofi Girl / Chill beats for long stays
            playerVars: { 'autoplay': 0, 'controls': 1 }
        });
    }

    function engageWarp() {
        // Play Music
        if(player) player.playVideo();
        
        // Star Animation
        document.querySelectorAll('.star').forEach(s => s.classList.add('warp'));
        
        // Refresh Ads
        ['ad1', 'ad2', 'ad3', 'ad4'].forEach(id => {
            document.getElementById(id).src = document.getElementById(id).src;
        });

        setTimeout(() => {
            document.querySelectorAll('.star').forEach(s => s.classList.remove('warp'));
        }, 2000);
    }
</script>
